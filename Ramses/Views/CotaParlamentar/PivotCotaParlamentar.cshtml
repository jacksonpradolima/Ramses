@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index")"><i class="fa fa-bar-chart-o"></i>Grid</a></li>
            <li class="active"><i class="fa fa-star"></i>Pivot</li>
        </ol>
    </div>
</div>

@section scripts
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js"></script>
    <script src="~/Scripts/jbPivot.js"></script>
    <script type="text/javascript">
        url_pivot_maior = '@Url.Action("ListCotaParlamentarMaior")';
        url_pivot_menor = '@Url.Action("ListCotaParlamentarMenor")';
    </script>
    <script src="~/Scripts/Views/CotaParlamentar.js"></script>
}
@section css
{
    <link href="~/Content/jbPivot/jbPivot.css" rel="stylesheet" />
}
<div class="alert alert-info">Pivots</div>
<div id="tabs">
    <ul>
        <li><a href="#tabs-1">Ranking dos que menos gastam (10 Dep.)</a></li>
        <li><a href="#tabs-2">Ranking dos que mais gastam (10 Dep.)</a></li>
    </ul>
    <div id="tabs-1">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <div id="pivot1"></div>
                </div>
            </div>
        </div>
    </div>
    <div id="tabs-2">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <div id="pivot2"></div>
                </div>
            </div>
        </div>
    </div>
</div>
