@model List<Ramses.Data.CotaPib>
@using GridMvc.Html;

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <div class="table table-hover table-striped">
                @Html.Grid(Model).Columns(columns =>
                    {                                                                                 
                        columns.Add(m => m.NomeParlamentar)
                                   .Titled(Resources.Literals.lbl_name);
                        columns.Add(m => m.Uf)
                                   .SetWidth(50)
                                   .Titled(Resources.Literals.lbl_state);                        
                        columns.Add(m => m.Partido)
                                   .SetWidth(250)
                                   .Titled(Resources.Literals.lbl_electoral_party);
                        columns.Add(m => m.Pib)
                                   .SetWidth(250)
                                   .Titled("PIB");
                        columns.Add(m => m.ValorDocumento)
                                   .SetWidth(100)
                                   .Titled("Valor");                         
                    }).WithPaging(10).Sortable(true)
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
