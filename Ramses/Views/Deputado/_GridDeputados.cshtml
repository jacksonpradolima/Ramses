@model List<Ramses.Data.Deputado>
@using GridMvc.Html;

<!-- Página dedicada ao grid -->
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <div class="table table-hover table-striped">
                @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(m => m.ideCadastro).Titled("ideCadastro");
                        columns.Add(m => m.nomeParlamentar).Titled("nomeParlamentar").Filterable(true);
                        columns.Add(m => m.UFEleito).Titled("UFEleito");
                    }).WithPaging(10).Sortable(true)
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
